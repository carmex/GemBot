# API Keys

GEMINI_API_KEY=
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=

# --- Search Provider Configuration ---
# Choose 'serpapi' or 'google'. Defaults to 'serpapi' if a key is provided.
SEARCH_PROVIDER=serpapi
# To enable the bot to perform web searches with SerpApi (optional)
SERPAPI_API_KEY=
# To enable the bot to perform web searches with Google Custom Search API (optional)
GOOGLE_API_KEY=
GOOGLE_CX_ID=

# Alpha Vantage API Key for !chart commands (optional)
ALPHA_VANTAGE_API_KEY=
# Finnhub API Key for !q and !cq commands as well as morning news (optional)
FINNHUB_API_KEY=

# Google Cloud project details for !image command
GCLOUD_PROJECT=your-gcloud-project-id
GCLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=./gcp-credentials.json

# Channel ID for the scheduled morning greeting (optional)
SLACK_MORNING_GREETING_CHANNEL_ID=

# Cron schedule for the morning greeting (e.g., '30 9 * * *' for 9:30 AM) (optional)
MORNING_GREETING_SCHEDULE='30 9 * * *'

# Vertex AI Configuration for !image generation (optional)
VERTEX_PROJECT_ID=
VERTEX_LOCATION=

# AI Provider Selection
# If unset and GEMINI_API_KEY is provided, defaults to 'gemini'; otherwise 'openai'
AI_PROVIDER=gemini

# Gemini Model Configuration
# recommend either gemini-2.5-pro or gemini-2.5-flash
# flash is less expensive and faster, but results are worse overall
GEMINI_MODEL=gemini-2.5-pro

# OpenAI-compatible Local Server (LM Studio, vLLM, etc.)
# Example for LM Studio running on LAN
OPENAI_BASE_URL=http://192.168.86.234:1234/v1
# Optional; LM Studio usually does not require a key
OPENAI_API_KEY=
# Example model id for LM Studio gemma
OPENAI_MODEL=google/gemma-3-12b
# The maximum context size (in tokens) for your local model. This is used for chunking large documents.
OPENAI_MAX_CONTEXT_SIZE=4096

# Number of messages to fetch for channel history context, if channel mode is enabled or in RPG GM mode
CHANNEL_HISTORY_LIMIT=10

# API Server Configuration (optional)
API_PORT=3000
API_KEY=