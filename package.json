{
    "name": "slack-ai-bot",
    "version": "1.0.0",
    "description": "A TypeScript Slack bot with AI capabilities",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node src/index.ts",
        "watch": "nodemon",
        "clean": "rimraf dist",
        "pm2:start": "npm run build && pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 stop slack-ai-bot",
        "pm2:restart": "pm2 restart slack-ai-bot",
        "pm2:delete": "pm2 delete slack-ai-bot",
        "pm2:logs": "pm2 logs slack-ai-bot",
        "pm2:status": "pm2 status"
    },
    "keywords": [
        "slack",
        "bot",
        "typescript",
        "ai"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@extractus/article-extractor": "^8.0.19",
        "@google-cloud/vertexai": "^1.10.0",
        "@google/generative-ai": "^0.24.1",
        "@mozilla/readability": "^0.6.0",
        "@slack/bolt": "^3.17.1",
        "@types/jsdom": "^21.1.7",
        "@types/mozilla-readability": "^0.2.1",
        "@types/node-fetch": "^2.6.12",
        "@types/roll": "^1.2.3",
        "chart.js": "^4.5.0",
        "chartjs-node-canvas": "^5.0.0",
        "dotenv": "^16.3.1",
        "jsdom": "^26.1.0",
        "lowdb": "^7.0.1",
        "node-cron": "^4.1.1",
        "node-fetch": "^3.3.2",
        "roll": "^1.3.2"
    },
    "devDependencies": {
        "@types/node": "^20.8.0",
        "@types/node-cron": "^3.0.11",
        "nodemon": "^3.0.1",
        "rimraf": "^5.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    }
}
